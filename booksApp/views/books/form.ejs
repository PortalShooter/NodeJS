<form method="POST" class="mt-5">
    <div class="form-group">
        <label for="inputTitle">Название</label>
        <input type="text"
               name="title"
               value="<%= title %>" 
               class="form-control"
               id="inputTitle">
    </div>

    <div class="form-group">
        <label for="inputAuthor">Автор</label>
        <input type="text"
               name="author"
               value="<%= author %>" 
               class="form-control"
               id="inputAuthor">
    </div>

    <div class="form-group mb-3">
        <label for="inputDesc">Описание</label>
        <textarea
                rows="3"
                name="desc"
                class="form-control"
                id="inputDesc"
        ><%= desc %></textarea>
    </div>

    <div class="form-group text-right ">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>